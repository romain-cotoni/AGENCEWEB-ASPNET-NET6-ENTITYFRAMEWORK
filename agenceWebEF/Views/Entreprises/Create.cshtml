@model agenceWebEF.Models.Entreprise

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-3"></div>
    <div class="col-6">
        <h1 class="display-6">Ajouter une entreprise</h1>
        <form asp-action="PostCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomEtp" class="control-label">raison sociale</label>
                <input asp-for="NomEtp" class="form-control" />
                <span asp-validation-for="NomEtp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SiretEtp" class="control-label">Siret</label>
                <input asp-for="SiretEtp" class="form-control" />
                <span asp-validation-for="SiretEtp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActiviteEtp" class="control-label">Activité</label>
                <input asp-for="ActiviteEtp" class="form-control" />
                <span asp-validation-for="ActiviteEtp" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-1">
                <input type="submit" value="Ajouter" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
