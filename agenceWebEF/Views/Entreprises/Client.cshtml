@model agenceWebEF.Models.Entreprise

@{
    ViewData["Title"] = "Client";
}

<div class="row">
    <div class="col-3"></div>
    <div class="col-6">
        <h1 class="display-6">Entreprise cliente</h1>
        <form asp-action="Client">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdEtp" />
            <div class="row mt-2">                           
                <div class="col-6 form-group">
                    <label asp-for="NomEtp" class="control-label">Raison sociale</label>
                    <input asp-for="NomEtp" class="form-control" />
                    <span asp-validation-for="NomEtp" class="text-danger"></span>
                </div>
                <div class="col-6 form-group">
                    <label asp-for="SiretEtp" class="control-label">Siret</label>
                    <input asp-for="SiretEtp" class="form-control" />
                    <span asp-validation-for="SiretEtp" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mt-1">
                <label asp-for="ActiviteEtp" class="control-label">Activité</label>
                <input asp-for="ActiviteEtp" class="form-control" />
                <span asp-validation-for="ActiviteEtp" class="text-danger"></span>
            </div>
            @*<button type="submit" class="btn btn-secondary mt-1" asp-controller="Entreprises" asp-action="GetEdit" asp-route-id=@Model.IdEtp>Modifier</button>*@
            <button type="submit" class="btn btn-secondary mt-1" asp-controller="Entreprises" asp-action="GetEdit" asp-route-IdEtp=IdEtp>Modifier</button>
            @if(Model != null && Model.Coordonnees.Count > 0)
            {
                @foreach (var item in Model.Coordonnees)
                {                
                     <div class="mt-3">
                        <form class="form-group">
                            @Html.HiddenFor(modelItem => item.IdCrd)
                            
                            @Html.LabelFor(modelItem => item.TelCrd, "Téléphone", new { htmlAttributes = new { @class = "control-label" } })
                            @Html.EditorFor(modelItem => item.TelCrd, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(modelItem => item.TelCrd)

                            @Html.LabelFor(modelItem => item.EmailCrd, "Email", new { htmlAttributes = new { @class = "control-label" } })
                            @Html.EditorFor(modelItem => item.EmailCrd, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(modelItem => item.EmailCrd)

                            @Html.LabelFor(modelItem => item.AdresseCrd, "Adresse", new { htmlAttributes = new { @class = "control-label" } })
                            @Html.EditorFor(modelItem => item.AdresseCrd, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(modelItem => item.AdresseCrd)

                            @Html.LabelFor(modelItem => item.Adresse2Crd, "Adresse 2", new { htmlAttributes = new { @class = "control-label" } })
                            @Html.EditorFor(modelItem => item.Adresse2Crd, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(modelItem => item.Adresse2Crd)

                            @Html.LabelFor(modelItem => item.VilleCrd, "Ville", new { htmlAttributes = new { @class = "control-label" } })
                            @Html.EditorFor(modelItem => item.VilleCrd, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(modelItem => item.VilleCrd)

                            @Html.LabelFor(modelItem => item.PostalCrd, "Code Postal", new { htmlAttributes = new { @class = "control-label" } })
                            @Html.EditorFor(modelItem => item.PostalCrd, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(modelItem => item.PostalCrd)

                            @Html.LabelFor(modelItem => item.PaysCrd, "Pays", new { htmlAttributes = new { @class = "control-label" } })
                            @Html.EditorFor(modelItem => item.PaysCrd, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(modelItem => item.PaysCrd)

                            @*@Html.ActionLink("Modifier les coordonnées1", "GetEdit", "Coordonnees", new {item.IdCrd})*@
                            <button type="submit" class="btn btn-secondary mt-1" asp-controller="Coordonnees" asp-action="GetEdit" asp-route-IdCrd=@item.IdCrd>Modifier les coordonnées</button>
                        </form>
                    </div>
                }
            }            
            else
            {                
                <form>
                    <button type="submit" class="btn btn-info mt-1" asp-controller="Coordonnees" asp-action="GetCreate" asp-route-IdEtp=IdEtp>Ajouter des coordonnées</button>
                </form>
                @*@Html.ActionLink("Ajouter des coordonnées", "Create", "Coordonnees")*@
               
            } 
        </form>
    </div>
    <div class="col-3 text-center">
        <div class="row mx-0">
            <form>
                <input type="hidden" asp-for="IdEtp"/>
                <button type="submit" class="btn btn-info col-5 me-1" asp-controller="Entreprises" asp-action="Client">Contacts</button>
                <button type="submit" class="btn btn-info col-5 ms-1" asp-controller="Projets"     asp-action="findAllProjetsByEntreprise" asp-route-IdEtp=IdEtp>Projets</button>
            </form>
        </div>
    </div>
</div>

